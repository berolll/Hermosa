<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="306dp">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="390dp"
            android:layout_height="307dp"

            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintHorizontal_bias="0.495"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent"
            tools:context=".MapsActivity" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="500dp"
        android:layout_marginTop="310dp"

        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="SpeakableTextPresentCheck">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btnkad"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"

                    android:text="KADIKÖY"
                    android:textStyle="italic"
                    android:fontFamily="@font/aclonica"
                    android:textSize="25sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="@color/black"
                    map:backgroundTint="#686365" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnav"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"

                    android:textStyle="italic"
                    android:fontFamily="@font/aclonica"
                    android:text="AVCILAR"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:backgroundTint="@color/black"
                    map:backgroundTint="#686365" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnbes"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:backgroundTint="@color/black"
                    android:fontFamily="@font/aclonica"
                    android:text="BEŞİKTAŞ"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    map:backgroundTint="#686365" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btntak"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:text="TAKSİM"
                    android:textColor="#FFFFFF"
                    android:textStyle="italic"
                    android:fontFamily="@font/aclonica"
                    android:textSize="25sp"
                    android:backgroundTint="@color/black"
                    map:backgroundTint="#686365" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnfat"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:text="FATİH"
                    android:textSize="25sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="italic"
                    android:fontFamily="@font/aclonica"
                    android:backgroundTint="@color/black"
                    map:backgroundTint="#686365" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnbey"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:text="BEYLİKDÜZÜ"
                    android:textSize="25sp"
                    android:textStyle="italic"
                    android:fontFamily="@font/aclonica"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="@color/black"
                    map:backgroundTint="#686365" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>